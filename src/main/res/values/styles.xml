<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

	<style name="MyDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">	
		<item name="android:windowBackground">@drawable/my_bg</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowTitleSize">16dip</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
	</style>

	<style name="MyDialogAnimation" parent="android:Animation">
		<item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  
		<item name="@android:windowExitAnimation">@anim/dialog_exit</item>    
	</style>

</resources>
